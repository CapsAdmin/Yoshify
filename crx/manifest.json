{
    "name": "Yoshify",
    "short_name": "Yoshify",
    "description" : "Call Yoshi from anywhere",
    "version": "0.0.1",
    "manifest_version": 2,
    "icons": {
    },
    "browser_action": {
      "default_title": "Yoshify",
      "default_icon": "images/icon.png"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["main.js"]
        }
    ],
    "web_accessible_resources": [
       "sounds/*.wav",
       "my-processor.js",
       "worker.js"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    }    
}

